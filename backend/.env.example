# Backend Environment Variables
# Copy this file to .env and fill in with your actual values
# IMPORTANT: Never commit .env to version control!

# Node Environment
NODE_ENV=development
PORT=5000

# MongoDB Connection
# Get your connection string from MongoDB Atlas dashboard
# Store the full connection string in .env file only (never commit to git)
MONGODB_URI=

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# OpenAI API Key
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Session Secret (generate a random 64-character string)
# You can generate this with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=

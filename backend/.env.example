# Backend Environment Variables
# Copy this file to .env and fill in with your actual values
# IMPORTANT: Never commit .env to version control!

# Node Environment
NODE_ENV=development
PORT=5000

# MongoDB Connection
# Format: mongodb+srv://username:password@cluster.mongodb.net/?appName=appName
MONGODB_URI=your_mongodb_connection_string_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# OpenAI API Key
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Session Secret (generate a random 64-character string)
# You can generate this with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_random_session_secret_here
